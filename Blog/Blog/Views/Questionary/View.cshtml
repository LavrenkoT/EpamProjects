@using Blog.Helpers;
@model Blog.Models.QuestionaryModel

<div class="porduct-order-agile">
    <div class="form-group row">
        <label class="col-form-label col-md-2">First Name</label>
        <div class="col-md-10">
            <div class="form-control-plaintext">@Html.ValueFor(x => x.Name)</div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-md-2">Gender</label>
        <div class="col-md-10">
            <div class="form-control-plaintext">@Html.ValueFor(x => x.Gender)</div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-form-label col-md-2">Kinds of sport</label>
        @Html.List(Model.Sports)
    </div>
</div>
